{
  "name": "LYDIA_API",
  "version": "1.0.0",
  "description": "Cypress API Automation for Reqres.in",
  "scripts": {
    "test": "cypress run",
    "test:users": "cypress run --spec 'cypress/e2e/api/users/**/*.cy.ts'",
    "cypress:open": "cypress open",
    "report:merge": "mochawesome-merge cypress/reports/*.json -o cypress/reports/mochawesome-report.json",
    "report:generate": "marge cypress/reports/mochawesome-report.json -o cypress/reports --inline"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.2",
    "cypress": "^15.7.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
